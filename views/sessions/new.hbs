<section class="section has-background-link-light">
  <div id="top-panel" class="columns">
    <div class="column is-one-quarter has-text-link">
      <a href="/books">
        <h1 class="title is-size-1">
          Book Club
        </h1>
      </a>
      <h1 class="subtitle is-size-3">
        Log in
      </h1>
      {{!-- <a href="/users/new"><button class="button is-medium is-link"><p>Sign up</p></button></a>
      <a href="/"><button class="button is-medium is-link"><p>Home</p></button></a>  --}}
    </div>
    <div id="main-container" class="column is-three-quarters tile is-ancestor">
    </div>
  </div>
</section>
<br />
<section class="section">
  <div id="main-panel" class="columns">
    <div d="book-image-current" class="title column is-one-quarter">
    </div>
    <br>
    <div class="column is-three-quarters">

      <form id="new-session-form" action="/sessions" method="post">

        <div class="field">
          <label class="label">Email</label>
          <div class="control">
            <input class="input is-link" id="email" name="email" type="email" >
          </div>
        </div>

        <div class="field">
          <label class="label">Password</label>
          <div class="control">
            <input class="input is-link" id="password" name="password" type="password" >
          </div>
        </div>

        <div class="control">
          <button class="button is-link" type="submit" value="Submit">Submit</button>
        </div>
      </form>
       <p class="help">Not got an account? <a href="/users/new">Click Here</a></p>
  </div>
 <p id="error">{{message}}</p>
  {{#if message}}
  <iframe src="https://giphy.com/embed/njYrp176NQsHS" width="480" height="200" frameBorder="0" class="giphy-embed" allowFullScreen></iframe>
  {{/if}}
</section>

