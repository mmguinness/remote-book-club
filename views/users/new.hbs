<section class="section has-background-link-light">
  <div id="top-panel" class="columns">
    <div class="column is-one-quarter has-text-link">
      <h1 class="title is-size-1">{{title}}</h1>
      <button class="button is-medium is-link" title="Disabled button" disabled>+
        Add</button>
      <a href="/history"><button class="button is-medium is-link"><p
          >Books</p></button></a>
    </div>
    <div id="main-container" class="column is-three-quarters tile is-ancestor">
      {{#each books}}
        <div class="books column is-2">
          <a href="/history">
            <img
              src="{{this.image}}"
              class="card-img-top"
              alt="..."
              width="100"
            />
          </a>
        </div>
      {{/each}}
    </div>
  </div>
</section>
<br />
<section class="section">
  <div id="main-panel" class="columns">
    <div d="book-image-current" class="title column is-one-quarter">
    </div>
    <br>

    <div class="column is-three-quarters">

      <h5 class="title is-size-5">Sign up to {{title}} to become a member and suggest a book.</h5>

      <form id="new-user-form" action="/users" method="post">
        <div class="field">
          <label class="label">Username</label>
          <div class="control">
            <input class="input is-link" id="userName" name="userName" type="text" placeholder="What would you like as your username?" required>
          </div>
        </div>

        <div class="field">
          <label class="label">Email</label>
          <div class="control">
            <input class="input is-link" id="email" name="email" type="email" placeholder="reader@example.com" required>
          </div>
        </div>

        <div class="field">
          <label class="label">Password</label>
          <div class="control">
            <input class="input" minlength="8" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" id="password" type="password" name="password" required>
          </div>
          <p class="help">Must contain an uppercase letter, a lowercase letter, a number and have minimum eight characters.</p>
        </div>

        <div class="control">
          <button class="button is-link">Sign up</button>
        </div>
      </form>
  </div>
  <script type="text/javascript" src="bundle.js"></script>
</section>





