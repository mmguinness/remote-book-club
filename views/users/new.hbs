<section class="section has-background-link-light">
  <div id="top-panel" class="columns">
    <div class="column is-one-quarter has-text-link">
      <h1 class="title is-size-1">{{title}}</h1>
      <button class="button is-large is-link" title="Disabled button" disabled>+
        Add</button>
      <a href="/history"><button class="button is-large is-link"><p
          >Books</p></button></a>
    </div>
    <div id="main-container" class="column is-three-quarters tile is-ancestor">
      {{#each books}}
        <div class="books column is-2">
          <a href="/history">
            <img
              src="{{this.image}}"
              class="card-img-top"
              alt="..."
              width="100"
            />
          </a>
        </div>
      {{/each}}
    </div>
  </div>
</section>
<br />
<section class="section">
  <div id="main-panel" class="columns">
    <div d="book-image-current" class="title column is-one-quarter">
      
    </div>
    <br />
    <div class="column is-three-quarters">
      <form id="new-user-form" action="/users" method="post">
        <div class="mb-3 mt-3">
          <label class="form-label" for="email">Email: </label>
          <input class="form-control" id="email" type="email" name="email" required>
        </div>
        <div class="mb-3">
          <label class="form-label" for="name">Name</label>
          <input class="form-control" id="name" type="text" name="name" required>
        </div>
        <div class="mb-3">
          <label class="form-label" for="password">Password: </label>
          <input class="form-control" minlength="8" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" id="password" type="password" name="password" required>
          <div class="hidden" id="validation-message">
            <h6>Password must contain the following:</h6>
            <span id="letter" class="invalid">A <b>lowercase</b> letter</span>
            <br>
            <span id="capital" class="invalid">A <b>capital (uppercase)</b> letter</span>
            <br>
            <span id="number" class="invalid">A <b>number</b></span>
            <br>
            <span id="length" class="invalid">Minimum <b>8 characters</b></span>
          </div>
        </div>
        <input class="btn btn-primary" id="submit" type="submit" value="Submit">
      </form>
      <p>Got an account? <a href="/sessions/new">Log In Here</a></p>
  </div>
  <script type="text/javascript" src="bundle.js"></script>
</section>